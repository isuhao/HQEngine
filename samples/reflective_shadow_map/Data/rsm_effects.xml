<techniques>
	<technique name="decode_random_factors"> <!-- must specify technique name -->
		<pass name="0">
			<vertex_shader>noise_decoding_vs</vertex_shader>
			<pixel_shader>noise_decoding_ps</pixel_shader>
			<texture0
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				random_factors_img
			</texture0>
			<custom_targets>  <!-- if not specified, default render target is used -->
				<target0>decoded_random_factors_img</target0> 
			</custom_targets>
		</pass>
	</technique>
	<technique name="rsm"> <!-- must specify technique name -->
		<pass name="depth-pass">
			<vertex_shader>depth-pass_vs</vertex_shader>
			<pixel_shader>depth-pass_ps</pixel_shader>
			<depth>full</depth> <!-- default is none -->
			<cull>ccw</cull>
			<custom_targets>  <!-- if not specified, default render target is used -->
				<target0>depth_img</target0> 
				<target1>world_pos_img</target1> 
				<target2>world_normal_img</target2> 
				<target3>flux_img</target3> 
				<depth_stencil_buffer_format>d24s8</depth_stencil_buffer_format>
			</custom_targets>
		</pass>
		<pass name="lowres-pass">
			<vertex_shader>lowres-pass_vs</vertex_shader>
			<pixel_shader>lowres-pass_ps</pixel_shader>
			<depth>full</depth> <!-- default is none -->
			<cull>ccw</cull>
			<custom_targets>  <!-- if not specified, default render target is used -->
				<target0>low_illumination_img</target0> 
				<target1>low_world_pos_img</target1> 
				<target2>low_world_normal_img</target2> 
				<depth_stencil_buffer_format>d24s8</depth_stencil_buffer_format>
			</custom_targets>
			<texture0
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				decoded_random_factors_img
			</texture0>
			<texture1
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				world_pos_img
			</texture1>
			<texture2
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				world_normal_img
			</texture2>
			<texture3
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				flux_img
			</texture3>
		</pass>
		
		<pass name="final-gathering">
			<vertex_shader>final-gathering_vs</vertex_shader>
			<pixel_shader>final-gathering_ps</pixel_shader>
			<depth>full</depth> <!-- default is none -->
			<cull>ccw</cull>
			<texture0
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				depth_img
			</texture0>
			<texture1
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				world_pos_img
			</texture1>
			<texture2
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				world_normal_img
			</texture2>
			<texture3
				min_filter="linear" mag_filter="linear" mipmap_filter="none"
				address_u="border" address_v="border" border_color="000000ff">
				flux_img
			</texture3>
			<texture4
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				decoded_random_factors_img
			</texture4>
			<texture5
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				low_illumination_img
			</texture5>
			<texture6
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				low_world_pos_img
			</texture6>
			<texture7
				min_filter="point" mag_filter="point" mipmap_filter="none"
				address_u="clamp" address_v="clamp">
				low_world_normal_img
			</texture7>
		</pass>
	</technique>
</techniques>